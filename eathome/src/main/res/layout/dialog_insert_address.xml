<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editCityClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:ems="10"
        android:hint="@string/enterCity"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edit_text_border" />

    <EditText
        android:id="@+id/editAddressClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:hint="@string/enterAddress"
        android:inputType="textPostalAddress"
        app:layout_constraintStart_toStartOf="@+id/editCityClient"
        app:layout_constraintTop_toBottomOf="@+id/editCityClient" />

    <EditText
        android:id="@+id/editNumberAddressClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:hint="@string/enterAddressNumber"
        android:inputType="textPostalAddress"
        app:layout_constraintStart_toStartOf="@+id/editAddressClient"
        app:layout_constraintTop_toBottomOf="@+id/editAddressClient" />


</androidx.constraintlayout.widget.ConstraintLayout>