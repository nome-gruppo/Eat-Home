<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"

    >


    <AutoCompleteTextView
        android:id="@+id/editCityClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginStart="-5dp"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/enterCity"
        android:completionHint="@string/enterCity"
        android:completionThreshold="2"
        android:drawableStart="@drawable/ic_place_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edit_text_border" />

    <EditText
        android:id="@+id/editAddressClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="-5dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:hint="@string/enterAddress"
        android:inputType="textPostalAddress"
        app:layout_constraintStart_toStartOf="@+id/editCityClient"
        app:layout_constraintTop_toBottomOf="@+id/editCityClient"
        android:autofillHints="@string/enterAddress"/>

    <EditText
        android:id="@+id/editNumberAddressClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="-5dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:hint="@string/enterAddressNumber"
        android:inputType="textPostalAddress"
        app:layout_constraintStart_toStartOf="@+id/editAddressClient"
        app:layout_constraintTop_toBottomOf="@+id/editAddressClient"
        tools:ignore="TextFields"
        android:autofillHints="@string/enterAddressNumber"/>


</androidx.constraintlayout.widget.ConstraintLayout>