<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/activity_place_info"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/colorPrimaryDark"
        android:padding="20dp">


        <TextView
            android:id="@+id/txtNamePlaceInfo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="35dp"
            android:layout_toEndOf="@id/imgPlaceInfo"
            android:layout_marginStart="5dp"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAddressPlaceInfo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="70dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/imgPlaceInfo"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imgPlaceInfo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginVertical="20dp"
            android:contentDescription="@string/image"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/txtBookingPlaceInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="130dp"
            android:layout_marginTop="16dp"
            android:text="@string/booking_expected"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtDeliveryPlaceInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="155dp"
            android:text="@string/delivery_expected"
            android:visibility="invisible" />

        <RatingBar
            android:id="@+id/activity_place_info_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginVertical="180dp"
            android:layout_marginStart="-2dp"
            android:numStars="5" />

        <TextView
            android:id="@+id/activity_place_info_numFeedback"
            android:layout_width="80dp"
            android:layout_height="17dp"
            android:layout_marginVertical="210dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/activity_place_info_ratingBar"
            android:textSize="12sp" />


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="275dp"
            android:layout_height="83dp"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="250dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_place_info"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-70dp"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/colorAccent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <Button
                    android:id="@+id/btnOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:background="@color/trasparent"
                    android:text="@string/show_menu" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:padding="5dp">

                <Button
                    android:id="@+id/btnBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/trasparent"
                    android:enabled="false"
                    android:text="@string/action_book" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>


    <TextView
        android:id="@+id/txtOpeningTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="580dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textAlignment="viewStart"/>
</RelativeLayout>


