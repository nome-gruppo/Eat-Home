<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/activity_place_info"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/colorPrimaryDark"
            android:padding="20dp">


                    <TextView
                        android:id="@+id/txtNamePlaceInfo"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                       android:layout_marginVertical="35dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/imgPlaceInfo"/>

            <TextView
                android:id="@+id/txtAddressPlaceInfo"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
               android:layout_marginVertical="70dp"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/imgPlaceInfo"
                android:textAlignment="center"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgPlaceInfo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_menu_gallery" />

            <TextView
                        android:id="@+id/txtOpeningTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="50dp"
                        android:layout_marginStart="56dp"
                        android:layout_toEndOf="@id/txtNamePlaceInfo"/>

                    <TextView
                        android:id="@+id/txtBookingPlaceInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="130dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/booking_expected"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtDeliveryPlaceInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="155dp"
                        android:text="@string/delivery_expected"
                        android:visibility="invisible" />

            <RatingBar
                android:id="@+id/activity_place_info_ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="190dp"
                android:numStars="5" />

            <TextView
                android:id="@+id/activity_place_info_numFeedback"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="20dp"
                android:layout_alignEnd="@id/activity_place_info_ratingBar"
               android:layout_marginVertical="200dp"
                android:textSize="12sp" />


            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="275dp"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:layout_marginStart="45dp"
                android:layout_marginVertical="270dp"
                />
        </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_place_info"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-90dp"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <Button
                    android:id="@+id/btnOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:background="@color/trasparent"
                    android:text="@string/show_menu" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <Button
                    android:id="@+id/btnBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/trasparent"
                    android:enabled="false"
                    android:text="@string/action_book" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>
</RelativeLayout>


