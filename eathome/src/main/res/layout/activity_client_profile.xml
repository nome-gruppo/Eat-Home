<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ClientProfileActivity">


    <TextView
        android:id="@+id/activity_client_tw_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/activity_client_et_name"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/activity_client_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/activity_client_profile_imBtn_name"
        app:layout_constraintEnd_toStartOf="@+id/activity_client_profile_imBtn_name" />

    <ImageButton
        android:id="@+id/activity_client_profile_imBtn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_profile_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_client_tw_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Email"
        app:layout_constraintBaseline_toBaselineOf="@+id/activity_client_et_email"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/activity_client_et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/activity_client_profile_imBtn_email"
        app:layout_constraintEnd_toStartOf="@+id/activity_client_profile_imBtn_email" />

    <ImageButton
        android:id="@+id/activity_client_profile_imBtn_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_profile_edit"
        app:layout_constraintStart_toStartOf="@+id/activity_client_profile_imBtn_name"
        app:layout_constraintTop_toBottomOf="@+id/activity_client_profile_imBtn_name" />

    <TextView
        android:id="@+id/activity_client_tw_oldPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Vecchia password"
        app:layout_constraintBaseline_toBaselineOf="@+id/activity_client_et_oldPassword"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/activity_client_et_oldPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Vecchia password"
        android:inputType="textPassword"
        app:layout_constraintStart_toEndOf="@+id/activity_client_tw_oldPassword"
        app:layout_constraintTop_toBottomOf="@+id/activity_client_profile_imBtn_email" />

    <TextView
        android:id="@+id/activity_client_tw_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="New password"
        app:layout_constraintBaseline_toBaselineOf="@+id/activity_client_et_newPassword"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/activity_client_et_newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/activity_client_et_password_confirm"
        app:layout_constraintEnd_toEndOf="@+id/activity_client_et_password_confirm" />

    <TextView
        android:id="@+id/activity_client_tw_password_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="Conferma password"
        app:layout_constraintBottom_toBottomOf="@+id/activity_client_et_password_confirm"
        app:layout_constraintEnd_toStartOf="@+id/activity_client_et_email"
        app:layout_constraintStart_toStartOf="@+id/activity_client_tw_password"
        app:layout_constraintTop_toTopOf="@+id/activity_client_et_password_confirm" />

    <EditText
        android:id="@+id/activity_client_et_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/activity_client_profile_imBtn_password_confirm"
        app:layout_constraintTop_toTopOf="@+id/activity_client_profile_imBtn_password_confirm" />

    <ImageButton
        android:id="@+id/activity_client_profile_imBtn_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_profile_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_client_et_oldPassword" />

    <TextView
        android:id="@+id/activity_client_tw_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="30dp"
        android:text="Phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_client_tw_password_confirm" />

    <EditText
        android:id="@+id/activity_client_et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toStartOf="@+id/activity_client_profile_imBtn_phone"
        app:layout_constraintTop_toTopOf="@+id/activity_client_profile_imBtn_phone" />

    <ImageButton
        android:id="@+id/activity_client_profile_imBtn_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:src="@drawable/ic_profile_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_client_et_password_confirm" />

    <Button
        android:id="@+id/activity_client_btn_myAddresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="My addresses"
        app:layout_constraintBaseline_toBaselineOf="@+id/activity_client_btn_deleteAccount"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activity_client_btn_deleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="24dp"
        android:text="Elimina account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_client_et_phone" />


</androidx.constraintlayout.widget.ConstraintLayout>