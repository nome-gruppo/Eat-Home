<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tlbPlaceOpeningTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_border"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            app:cardElevation="10dp">


            <TableLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_access_time_black_24dp"
                        android:text="@string/monday" />


                    <Button
                        android:id="@+id/editMonday"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editMondayClosed"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchMonday"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />


                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_access_time_black_24dp"
                        android:text="@string/tuesday" />

                    <Button
                        android:id="@+id/editTuesday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editTuesdayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_access_time_black_24dp"
                        android:text="@string/wednesday" />

                    <Button
                        android:id="@+id/editWednesday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editWednesdayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_access_time_black_24dp"
                        android:text="@string/thursday" />

                    <Button
                        android:id="@+id/editThursday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editThursdayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>

                <TableRow
                    android:layout_width="346dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_access_time_black_24dp"
                        android:text="@string/friday" />

                    <Button
                        android:id="@+id/editFriday"
                        android:layout_width="80dp"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editFridayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchFriday"
                        android:layout_width="34dp"
                        android:layout_height="6dp"
                        android:layout_marginStart="0dp"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_access_time_black_24dp"
                        android:text="@string/saturday" />

                    <Button
                        android:id="@+id/editSaturday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editSaturdayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_access_time_black_24dp"
                        android:text="@string/sunday" />

                    <Button
                        android:id="@+id/editSunday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editSundayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>

            </TableLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSignUpPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_style"
            android:text="@string/tw_signUp" />

        <Button
            android:id="@+id/btnEditOpeningTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_style"
            android:text="@string/edit"
            android:visibility="invisible" />

    </LinearLayout>
</ScrollView>
