<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false"
    android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="388dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:text="@string/set_opening"
                android:textSize="18dp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:text="@string/monday" />


                    <Button
                        android:id="@+id/editMonday"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editMondayClosed"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />


                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:text="@string/tuesday" />

                    <Button
                        android:id="@+id/editTuesday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editTuesdayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:text="@string/wednesday" />

                    <Button
                        android:id="@+id/editWednesday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editWednesdayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:text="@string/thursday" />

                    <Button
                        android:id="@+id/editThursday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editThursdayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>

                <TableRow
                    android:layout_width="346dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:text="@string/friday" />

                    <Button
                        android:id="@+id/editFriday"
                        android:layout_width="80dp"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editFridayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchFriday"
                        android:layout_width="34dp"
                        android:layout_height="6dp"
                        android:layout_marginStart="0dp"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:text="@string/saturday" />

                    <Button
                        android:id="@+id/editSaturday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editSaturdayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_access_time_black_24dp"
                        android:text="@string/sunday" />

                    <Button
                        android:id="@+id/editSunday"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/from" />

                    <Button
                        android:id="@+id/editSundayClosed"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/quantum_white_100"
                        android:ems="10"
                        android:text="@string/to" />

                    <Switch
                        android:id="@+id/switchSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/close"
                        android:textOn="@string/open" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnSigninPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/button_border"
                android:text="@string/tw_signUp" />

            <Button
        android:id="@+id/btnEditOpeningTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:visibility="invisible"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_border"/>

        </LinearLayout>
    </ScrollView>
