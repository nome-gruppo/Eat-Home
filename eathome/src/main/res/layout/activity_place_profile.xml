<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tlbPlaceProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/toolbar_border"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        android:layout_marginTop="20dp"
        android:autofillHints="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp">

    <EditText
        android:id="@+id/activity_place_profile_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_menu_login"
        android:background="@drawable/edit_text_border"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="25dp" />

    <ImageButton
        android:id="@+id/activity_place_profile_imBtn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_edit"
        android:layout_gravity="center"/>

    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">

    <EditText
        android:id="@+id/activity_place_profile_et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_border"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="91dp" />

    <ImageButton
        android:id="@+id/activity_place_profile_imBtn_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_edit"
        android:layout_gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">

    <EditText
        android:id="@+id/activity_place_profile_et_oldPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:layout_gravity="center"
        android:hint="@string/old_password"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_border" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">

    <EditText
        android:id="@+id/activity_place_profile_et_newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:layout_gravity="center"
        android:hint="@string/new_password"
        android:background="@drawable/edit_text_border"
        android:inputType="textPassword" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">

    <EditText
        android:id="@+id/activity_place_profile_et_confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:hint="@string/confirm_password"
        android:background="@drawable/edit_text_border"
        android:inputType="textPassword" />

    <ImageButton
        android:id="@+id/activity_place_profile_imBtn_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_edit"
        android:layout_gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">

    <EditText
        android:id="@+id/activity_place_profile_et_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_border" />

    <EditText
        android:id="@+id/activity_place_profile_et_numAddress"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_border" />

    <ImageButton
        android:id="@+id/activity_place_profile_imBtn_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_edit"
        android:layout_gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">


    <EditText
        android:id="@+id/activity_place_profile_et_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_border" />


    <ImageButton
        android:id="@+id/activity_place_profile_imBtn_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_edit"
        android:layout_gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">

    <EditText
        android:id="@+id/activity_place_profile_et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_local_phone_black_24dp"
        android:layout_gravity="center"
        android:inputType="phone"
        android:background="@drawable/edit_text_border" />

    <ImageButton
        android:id="@+id/activity_place_profile_imBtn_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_edit"
        android:layout_gravity="center"/>

        </TableRow>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical">



    <SeekBar
        android:id="@+id/activity_place_profile_sb_deliveryCost"
        android:layout_width="299dp"
        android:layout_height="33dp"
        android:max="5"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">

    <CheckBox
        android:id="@+id/activity_place_profile_cb_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="560dp" />

    <CheckBox
        android:id="@+id/activity_place_profile_cb_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="557dp" />

        </TableRow>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_place_profile_rb_pizzeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/pizzeria" />

            <RadioButton
                android:id="@+id/activity_place_profile_rb_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/pizzeriaRestaurant" />

            <RadioButton
                android:id="@+id/activity_place_profile_rb_sushi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/sushi" />

        </RadioGroup>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_place_profile_rb_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Altro" />

            <RadioButton
                android:id="@+id/activity_place_profile_rb_italianRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/italianRestaurant" />

        </RadioGroup>

    </RadioGroup>

        </LinearLayout>

        </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/activity_place_profile_btn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_opening"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/button_border" />

    <Button
        android:id="@+id/activity_place_profile_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/button_border" />

        <Button
            android:id="@+id/activity_client_btn_deleteAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_account"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/button_border" />

    </TableLayout>

    </ScrollView>

</LinearLayout>